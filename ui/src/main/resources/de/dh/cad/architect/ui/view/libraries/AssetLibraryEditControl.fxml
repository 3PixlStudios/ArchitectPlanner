<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<fx:root type="javafx.scene.layout.BorderPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <GridPane prefHeight="130.0" prefWidth="350.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints prefHeight="25.0" vgrow="NEVER" />
          <RowConstraints prefHeight="25.0" vgrow="NEVER" />
          <RowConstraints prefHeight="25.0" vgrow="NEVER" />
          <RowConstraints prefHeight="50.0" vgrow="ALWAYS" />
        </rowConstraints>
         <children>
            <Label text="Bibliotheks-Pfad" />
            <Label text="Id" GridPane.rowIndex="1" />
            <Label text="Name" GridPane.rowIndex="2" />
            <Label text="Beschreibung" GridPane.rowIndex="3" />
            <Label fx:id="mPathLabel" text="-" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" />
            <Label fx:id="mIdLabel" text="-" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" />
            <TextField fx:id="mNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextArea fx:id="mDescriptionTextArea" prefHeight="166.0" prefWidth="275.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         </children>
      </GridPane>
   </center>
</fx:root>
